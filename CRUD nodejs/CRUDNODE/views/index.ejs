<!doctype html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.rtl.min.css" integrity="sha384-Xbg45MqvDIk1e563NLpGEulpX6AvL404DP+/iCgW9eFa2BqztiwTexswJo2jLMue" crossorigin="anonymous">
    <link href='https://cdn.boxicons.com/fonts/brands/boxicons-brands.min.css' rel='stylesheet'>
    <title>CRUD DE USUARIOS</title>
  </head>
  <body>
<nav class="navbar" style="background-color: #14ec8b;" data-bs-theme="light">
  <div class="container-fluid">
    <a class="navbar-brand">CRUD NORMAL DE USUARIOS</a>
    <form class="d-flex" role="search">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"/>
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</nav>

    <div class="container">
        <a href="/create" class="btn btn-outline-primary ">nuevo</a>
        <table class="table table-bordered table-striped text-center m-4">
            <thead>
                <tr class="bg-primary text-white">
                <th scope="col">ID</th>
                <th scope="col">USUARIO</th>
                <th scope="col">ROL</th>
                <th scope="col">ACCIONES</th>
                </tr>
             </thead>
            <tbody>
            <% results.forEach((user) => { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.user %></td>
                <td><%= user.rol %></td>
                <td>
                    <a href="/edit/<%= user.id %>" class="btn btn-outline-info" >editar</a>
                    <a href="/delete/<%= user.id %>" class="btn btn-outline-danger">borrar</a>
                </td>
            </tr>
            <% }) %>
            </tbody>
        </table>
        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

  </body>
</html>